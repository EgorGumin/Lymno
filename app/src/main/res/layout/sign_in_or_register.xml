<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/greeting"
    android:background="@mipmap/fontmaybe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goToSign"
        android:textColor="@color/white"
        android:id="@+id/goToSign"
        android:minWidth="200dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/goToReg"
        android:layout_alignStart="@+id/goToReg"
        android:layout_marginTop="111dp"
        android:minHeight="50dp"
        android:background="@drawable/ghost_button"
        android:padding="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goToReg"
        android:textColor="@color/white"
        android:id="@+id/goToReg"
        android:minWidth="200dp"
        android:layout_below="@+id/goToSign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:minHeight="50dp"
        android:background="@drawable/ghost_button"
        android:padding="5dp" />
</RelativeLayout>